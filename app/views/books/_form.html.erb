      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  
  <!-- adding another text field for author -->
  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>
  
    <!-- adding another text field for price -->
  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, value: @book.price ? '%.2f' % @book.price : nil, min: 0, step: 0.01 %>
  </div>
  
  <!-- adding another text field for price -->
  <div class="field">
    <%= form.label :published_date %>
    <%= form.date_field :published_date %>
